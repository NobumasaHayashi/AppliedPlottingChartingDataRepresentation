/*Fix for IE showing errors*/
if (!window.console) {
    window.console = {};
}
if (!console.log) {
    console.log = function () {};
}

window.onload = function () {
    showAd();
};

/* Runs when the page is completely loaded.*/
function showAd() {
    Container.style.display = "block";
    /*Assign Variables*/

    /*
    ---------------------
    I N T E R A C T I O N
    ---------------------
    */

    function enableCTA(){
        Container.addEventListener("mouseover", CTAOver);
        Container.addEventListener("mouseout", CTAOut);
    }

    function CTAOver() {
        TweenMax.to(CTA, 0.25, {
            scale: 1.1,
            ease: Linear.easeNone
        })
    }

    function CTAOut() {
        TweenMax.to(CTA, 0.25, {
            scale: 1.00,
            ease: Linear.easeNone
        })
    }

    /*
    ------------------
    A N I M A T I O N
    ------------------
    */

    var tl_Main = new TimelineMax({repeat: 1, repeatDelay: 2});

    tl_Main
        /*Frame1*/
        .from([copy1_1, copy1_2], 0.5, {
            opacity: 0
        }, "+=0.5")
        /*Frame2*/
        .from(copy2, 0.5, {
            opacity: 0
        }, "+=1")
        .from(logoQB, 0.5, {
            opacity: 0
        })
        .from(CTA, 0.5, {
            opacity: 0
        })
        .add(function () {
            enableCTA();
        })
}
